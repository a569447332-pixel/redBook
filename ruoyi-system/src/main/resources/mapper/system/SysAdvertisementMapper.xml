<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SysAdvertisementMapper">

    <resultMap type="SysAdvertisement" id="SysAdvertisementResult">
        <result property="adId"    column="ad_id"    />
        <result property="adName"    column="ad_name"    />
        <result property="categoryId"    column="category_id"    />
        <result property="categoryName"    column="category_name"    />
        <result property="adImage"    column="ad_image"    />
        <result property="adUrl"    column="ad_url"    />
        <result property="sort"    column="sort"    />
        <result property="status"    column="status"    />
        <result property="startTime"    column="start_time"    />
        <result property="endTime"    column="end_time"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
        <result property="adBackupParams" column="ad_backup_params"/>
    </resultMap>

    <sql id="selectSysAdvertisementVo">
        select a.ad_id, a.ad_name, a.category_id, c.category_name, a.ad_image, a.ad_url, a.sort, a.status, a.start_time, a.end_time, a.create_by, a.create_time, a.update_by, a.update_time, a.remark, a.ad_backup_params
        from sys_advertisement a
        left join sys_ad_category c on a.category_id = c.category_id
    </sql>

    <select id="selectSysAdvertisementByAdId" parameterType="Long" resultMap="SysAdvertisementResult">
        <include refid="selectSysAdvertisementVo"/>
        where a.ad_id = #{adId}
    </select>

    <select id="selectSysAdvertisementList" parameterType="SysAdvertisement" resultMap="SysAdvertisementResult">
        <include refid="selectSysAdvertisementVo"/>
        <where>
            <if test="adName != null and adName != ''">
                and a.ad_name like concat('%', #{adName}, '%')
            </if>
            <if test="categoryId != null">
                and a.category_id = #{categoryId}
            </if>
            <if test="status != null and status != ''">
                and a.status = #{status}
            </if>
        </where>
        order by a.sort asc, a.create_time desc
    </select>

    <insert id="insertSysAdvertisement" parameterType="SysAdvertisement" useGeneratedKeys="true" keyProperty="adId">
        insert into sys_advertisement
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="adName != null and adName != ''">ad_name,</if>
            <if test="categoryId != null">category_id,</if>
            <if test="adImage != null and adImage != ''">ad_image,</if>
            <if test="adUrl != null and adUrl != ''">ad_url,</if>
            <if test="sort != null">sort,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="startTime != null">start_time,</if>
            <if test="endTime != null">end_time,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="remark != null and remark != ''">remark,</if>
            <if test="adBackupParams != null and adBackupParams != ''">ad_backup_params,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="adName != null and adName != ''">#{adName},</if>
            <if test="categoryId != null">#{categoryId},</if>
            <if test="adImage != null and adImage != ''">#{adImage},</if>
            <if test="adUrl != null and adUrl != ''">#{adUrl},</if>
            <if test="sort != null">#{sort},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="startTime != null">#{startTime},</if>
            <if test="endTime != null">#{endTime},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="remark != null and remark != ''">#{remark},</if>
            <if test="adBackupParams != null and adBackupParams != ''">#{adBackupParams},</if>
        </trim>
    </insert>

    <update id="updateSysAdvertisement" parameterType="SysAdvertisement">
        update sys_advertisement
        <trim prefix="SET" suffixOverrides=",">
            <if test="adName != null and adName != ''">ad_name = #{adName},</if>
            <if test="categoryId != null">category_id = #{categoryId},</if>
            <if test="adImage != null and adImage != ''">ad_image = #{adImage},</if>
            <if test="adUrl != null and adUrl != ''">ad_url = #{adUrl},</if>
            <if test="sort != null">sort = #{sort},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null and remark != ''">remark = #{remark},</if>
            <if test="adBackupParams != null and adBackupParams != ''">ad_backup_params = #{adBackupParams},</if>
        </trim>
        where ad_id = #{adId}
    </update>

    <delete id="deleteSysAdvertisementByAdId" parameterType="Long">
        delete from sys_advertisement where ad_id = #{adId}
    </delete>

    <delete id="deleteSysAdvertisementByAdIds" parameterType="String">
        delete from sys_advertisement where ad_id in
        <foreach item="adId" collection="array" open="(" separator="," close=")">
            #{adId}
        </foreach>
    </delete>

</mapper>
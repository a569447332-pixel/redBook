<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SysAdCategoryMapper">

    <resultMap type="SysAdCategory" id="SysAdCategoryResult">
        <result property="categoryId"    column="category_id"    />
        <result property="categoryName"    column="category_name"    />
        <result property="sort"    column="sort"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectSysAdCategoryVo">
        select category_id, category_name, sort, status, create_by, create_time, update_by, update_time, remark from sys_ad_category
    </sql>

    <select id="selectSysAdCategoryByCategoryId" parameterType="Long" resultMap="SysAdCategoryResult">
        <include refid="selectSysAdCategoryVo"/>
        where category_id = #{categoryId}
    </select>

    <select id="selectSysAdCategoryList" parameterType="SysAdCategory" resultMap="SysAdCategoryResult">
        <include refid="selectSysAdCategoryVo"/>
        <where>
            <if test="categoryName != null and categoryName != ''">
                and category_name like concat('%', #{categoryName}, '%')
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
        </where>
        order by sort asc, create_time desc
    </select>

    <select id="selectSysAdCategoryAll" resultMap="SysAdCategoryResult">
        <include refid="selectSysAdCategoryVo"/>
        where status = '0'
        order by sort asc
    </select>

    <insert id="insertSysAdCategory" parameterType="SysAdCategory" useGeneratedKeys="true" keyProperty="categoryId">
        insert into sys_ad_category
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="categoryName != null and categoryName != ''">category_name,</if>
            <if test="sort != null">sort,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="remark != null and remark != ''">remark,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="categoryName != null and categoryName != ''">#{categoryName},</if>
            <if test="sort != null">#{sort},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="remark != null and remark != ''">#{remark},</if>
        </trim>
    </insert>

    <update id="updateSysAdCategory" parameterType="SysAdCategory">
        update sys_ad_category
        <trim prefix="SET" suffixOverrides=",">
            <if test="categoryName != null and categoryName != ''">category_name = #{categoryName},</if>
            <if test="sort != null">sort = #{sort},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null and remark != ''">remark = #{remark},</if>
        </trim>
        where category_id = #{categoryId}
    </update>

    <delete id="deleteSysAdCategoryByCategoryId" parameterType="Long">
        delete from sys_ad_category where category_id = #{categoryId}
    </delete>

    <delete id="deleteSysAdCategoryByCategoryIds" parameterType="String">
        delete from sys_ad_category where category_id in
        <foreach item="categoryId" collection="array" open="(" separator="," close=")">
            #{categoryId}
        </foreach>
    </delete>

</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SysNewsMapper">

    <!-- 结果集映射 -->
    <resultMap type="com.ruoyi.system.domain.SysNews" id="SysNewsResult">
        <id property="newsId" column="news_id" />
        <result property="title" column="title" />
        <result property="categoryId" column="category_id" />
        <result property="categoryName" column="category_name" />
        <result property="content" column="content" />
        <result property="type" column="type" />
        <result property="cover" column="cover" />
        <result property="videoUrl" column="video_url" />
        <result property="viewCount" column="view_count" />
        <result property="status" column="status" />
        <result property="createBy" column="create_by" />
        <result property="createTime" column="create_time" />
        <result property="updateBy" column="update_by" />
        <result property="updateTime" column="update_time" />
        <result property="remark" column="remark" />
    </resultMap>

    <!-- 基础查询字段 -->
    <sql id="selectSysNewsVo">
        SELECT
            n.news_id, n.title, n.category_id, c.category_name, n.content,
            n.type, n.cover, n.video_url, n.view_count, n.status,
            n.create_by, n.create_time, n.update_by, n.update_time, n.remark
        FROM sys_news n
        LEFT JOIN sys_news_category c ON n.category_id = c.category_id
    </sql>

    <!-- 查询新闻列表（带条件） -->
    <select id="selectSysNewsList" parameterType="com.ruoyi.system.domain.SysNews" resultMap="SysNewsResult">
        <include refid="selectSysNewsVo" />
        <where>
            <if test="title != null and title != ''">
                AND n.title LIKE CONCAT('%', #{title}, '%')
            </if>
            <if test="categoryId != null">
                AND n.category_id = #{categoryId}
            </if>
            <if test="type != null and type != ''">
                AND n.type = #{type}
            </if>
            <if test="status != null and status != ''">
                AND n.status = #{status}
            </if>
        </where>
        ORDER BY n.create_time DESC
    </select>

    <!-- 通过ID查询新闻 -->
    <select id="selectSysNewsById" parameterType="Long" resultMap="SysNewsResult">
        <include refid="selectSysNewsVo" />
        WHERE n.news_id = #{newsId}
    </select>

    <!-- 新增新闻 -->
    <insert id="insertSysNews" parameterType="com.ruoyi.system.domain.SysNews" useGeneratedKeys="true" keyProperty="newsId">
        INSERT INTO sys_news
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">title,</if>
            <if test="categoryId != null">category_id,</if>
            <if test="content != null">content,</if>
            <if test="type != null and type != ''">type,</if>
            <if test="cover != null">cover,</if>
            <if test="videoUrl != null">video_url,</if>
            <if test="viewCount != null">view_count,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="remark != null">remark,</if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">#{title},</if>
            <if test="categoryId != null">#{categoryId},</if>
            <if test="content != null">#{content},</if>
            <if test="type != null and type != ''">#{type},</if>
            <if test="cover != null">#{cover},</if>
            <if test="videoUrl != null">#{videoUrl},</if>
            <if test="viewCount != null">#{viewCount},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="remark != null">#{remark},</if>
        </trim>
    </insert>

    <!-- 修改新闻 -->
    <update id="updateSysNews" parameterType="com.ruoyi.system.domain.SysNews">
        UPDATE sys_news
        <set>
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="categoryId != null">category_id = #{categoryId},</if>
            <if test="content != null">content = #{content},</if>
            <if test="type != null and type != ''">type = #{type},</if>
            <if test="cover != null">cover = #{cover},</if>
            <if test="videoUrl != null">video_url = #{videoUrl},</if>
            <if test="viewCount != null">view_count = #{viewCount},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = SysNews#{updateTime},</if>
            <if test="remark != null">remark = #{remark}</if>
        </set>
        WHERE news_id = #{newsId}
    </update>

    <!-- 删除新闻 -->
    <delete id="deleteSysNewsById" parameterType="Long">
        DELETE FROM sys_news WHERE news_id = #{newsId}
    </delete>

</mapper>